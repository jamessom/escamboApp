<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Editar Categoria</h1>

        <div class="panel panel-default">
          <div class="panel-heading">Atualizar categoria</div>
          <div class="panel-body">
            <div class="col-lg-12">
              <%= form_for([:backoffice, @category]) do |f| %>
                <div class="form-group">
                  <label>Descrição</label>
                  <%= f.text_field :description, class: 'form-control', placeholder: 'Ex: Eletrônicos, Jogos' %>
                </div>

                <button type="submit" class="btn btn-default">Salvar</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->