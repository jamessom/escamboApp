<h1 class="page-header">Administradores</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    Categorias

    <%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Acesso</th>
            <th>Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id  %></td>
              <td><%= admin.name  %></td>
              <td><%= admin.email  %></td>
              <td><%= admin.role_access  %></td>
              <td>
                <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-info btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <% unless current_admin.id == admin.id %>
                  <%= link_to backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle",
                  data: { confirm: "Você deseja deletar (#{admin.email})?" } do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
