<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Categorias</h1>
        <div class="panel panel-default">
          <div class="panel-heading">
            Categorias
            <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @categories.each do |category| %>
                    <tr>
                      <td><%= category.id  %></td>
                      <td><%= category.description  %></td>
                      <td>
                        <%= link_to edit_backoffice_category_path(category), class: "btn btn-info btn-circle" do %>
                          <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to backoffice_categories_path, class: "disabled btn btn-danger btn-circle" do %>
                          <i class="fa fa-minus"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->